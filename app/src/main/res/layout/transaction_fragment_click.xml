<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@android:color/secondary_text_dark_nodisable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/im"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/imageView"
        android:id="@+id/liner">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Zimbabwe Republic Police High School"
            android:id="@+id/schoolName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/schoolName"
            android:paddingTop="5dp"
            android:text="Fees payment for Hopewell Mutanda for Form 1 Second Term. Pain Via Ecocash"
            android:id="@+id/shortDesc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"

            android:text="12:56"
            android:id="@+id/date" />
    </RelativeLayout>


</RelativeLayout>