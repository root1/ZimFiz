<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.afollestad.silk.views.text.SilkTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Enter Tuition"
            android:textColor="@color/heading"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners_white"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="#00000000"
                android:ems="10"
                android:id="@+id/amount"
                android:inputType="numberDecimal"
                android:textColor="#000" />

        </LinearLayout>

        <com.afollestad.silk.views.text.SilkTextView
            android:id="@+id/lable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Charge"
            android:textColor="@color/heading"
            android:textSize="20sp" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/chargeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners_white"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <EditText
                android:id="@+id/charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:ems="10"
                android:textColor="#000" />

        </LinearLayout>

        <com.afollestad.silk.views.text.SilkTextView
            android:id="@+id/lable4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Amount Payable"
            android:textColor="@color/heading"
            android:textSize="20sp" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amountPayableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners_white"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <EditText
                android:id="@+id/amountPayable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:ems="10"
                android:textColor="#000" />
        </LinearLayout>


        <Button
            android:id="@+id/btncontinue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details"
            android:layout_marginBottom="20dp"
            android:background="@drawable/help_button_background"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="Calculate"
            android:textColor="@drawable/help_button_text_color"
            android:textSize="15sp"
            android:visibility="visible" />
    </LinearLayout>


</ScrollView>