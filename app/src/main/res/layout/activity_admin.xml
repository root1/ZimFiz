<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingTop="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:padding="20dp"
                    android:layout_height="fill_parent"
                    android:background="@color/primary"
                    android:orientation="vertical">

                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/users_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Total Users"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/number_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/users_lable"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#9933CC"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/schools_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        android:text="Total Schools"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/number_schools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"

                        android:layout_below="@+id/schools_lable"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#16A765"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/trans_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Transactions"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                    <com.afollestad.silk.views.text.SilkTextView
                        android:id="@+id/number_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/trans_lable"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>