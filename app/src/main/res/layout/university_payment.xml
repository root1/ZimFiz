<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Student Details"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_margin="5dp"
                android:background="#2196f3" />

            <EditText
                android:id="@+id/studentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Student Number"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/schoolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:hint="University Name"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <Spinner
                    android:id="@+id/form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:entries="@array/part"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:entries="@array/semester"
                    android:textColor="#000" />
            </LinearLayout>

            <TextView
                android:id="@+id/accountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="3dp"
                android:text="Bank Details"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_margin="5dp"
                android:background="#2196f3" />

            <AutoCompleteTextView
                android:id="@+id/bankName"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Bank Name"
                android:textColor="#000" />

            <EditText
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Account Name"
                android:textColor="#000" />

            <EditText
                android:id="@+id/accountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Account Number"
                android:textColor="#000" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Tuition"
                android:inputType="numberDecimal"
                android:textColor="#000" />


            <Spinner
                android:id="@+id/paymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:entries="@array/payment"
                android:textColor="#000" />

            <EditText
                android:id="@+id/paidBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Paid in By" />


            <Button
                android:id="@+id/btncontinue"
                android:background="@drawable/help_button_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginBottom="20dp"
                android:text="Continue"
                android:textSize="15sp"
                android:textColor="@drawable/help_button_text_color"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>